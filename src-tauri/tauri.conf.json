{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "iptv-explorer",
  "version": "0.0.3",
  "identifier": "com.iptv.explorer",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "IPTV Explorer",
        "width": 1200,
        "height": 800,
        "decorations": true,
        "center": true,
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' data: blob: https://cdn.tailwindcss.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com https://iptv-org.github.io; worker-src 'self' 'unsafe-inline' blob:; img-src 'self' * data:; media-src * blob:; connect-src *;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}